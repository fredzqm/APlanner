@model APlanner.Models.ScheduleDisplay

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

<div class="container content_box">

    <div class="col-md-12">
        <div id="calendar" class="cal-context" style="width: 100%;">
            <div class="cal-row-fluid cal-row-head">
                <div class="cal-cell2"></div>

                <div class="cal-cell1">Monday</div>

                <div class="cal-cell1">Tuesday</div>

                <div class="cal-cell1">Wednesday</div>

                <div class="cal-cell1">Thursday</div>

                <div class="cal-cell1">Friday</div>

            </div>
            <div class="cal-month-box">

                @for (int period = 1; period <= 10; period++)
            {
                    <div class="cal-row-fluid cal-before-eventlist">

                        <div class="cal-cell2 cal-cell" data-cal-row="-day2">
                            <div class="cal-month-day cal-day-inmonth">
                                <span class="pull-right" period=@period data-cal-date="2015-12-27" data-cal-view="day" data-toggle="tooltip" title="" data-original-title="">@period</span>
                            </div>
                        </div>

                        @for (int day = 1; day <= 5; day++)
                        {
                            <div class="cal-cell1 cal-cell" data-cal-row="-day2">
                                <div class="cal-month-day cal-day-inmonth">
                                    <span class="pull-right" day=@day period=@period data-cal-date="2015-12-27" data-cal-view="day" data-toggle="tooltip" title="" data-original-title="">
                                    @if(@Model.cells[@day-1, @period-1] != null) {
                                        @Model.cells[@day-1, @period-1].text;
                                    }
                                    </span>

                                </div>
                            </div>
                        }
                    </div>
                }

            </div>
        </div>
    </div>
</div>
